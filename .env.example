# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pocketbridge

# Option 2: Use individual PostgreSQL variables (alternative)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=pocketbridge
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_CONNECTION_TIMEOUT=2000

# Redis Configuration
# Option 1: Use REDIS_URL (recommended for production)
REDIS_URL=redis://localhost:6379

# Option 2: Use individual Redis variables (alternative)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_RETRY_DELAY=100
# REDIS_MAX_RETRIES=3

# Server Identity (Ed25519 keys)
# Generate these using the backend's crypto utilities
# SERVER_PUBLIC_KEY=
# SERVER_PRIVATE_KEY=
# SERVER_PUBLIC_KEY_HEX=

# CORS Configuration
# Comma-separated list of allowed origins for browser clients.
# Example: your deployed web app domain(s) on Vercel/Netlify/etc.
# In production, avoid '*' when using credentials.
# Note: Do NOT include a trailing slash.
CORS_ORIGIN=https://pocketbridge.duckdns.org,https://showmanly-proevolutionary-kasie.ngrok-free.dev
# Send `Access-Control-Allow-Credentials: true` (requires specific origins, not '*').
CORS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_SESSION_TIMEOUT=86400000
WS_REPLAY_WINDOW_DAYS=30
WS_MAX_CONNECTIONS_PER_IP=10

# Logging
LOG_LEVEL=info
