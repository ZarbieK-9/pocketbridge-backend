{
  "name": "pocketbridge-backend",
  "version": "1.0.0",
  "description": "PocketBridge Phase 1 Backend - Event-driven E2E encrypted system",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "migrate": "tsx -r dotenv/config src/db/migrate-cli.ts",
    "migrate:status": "tsx -r dotenv/config src/db/migrate-cli.ts status",
    "migrate:rollback": "tsx -r dotenv/config src/db/migrate-cli.ts rollback",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "node scripts/pocketbridge-test-suite.js",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-db": "tsx scripts/check-db.ts"
  },
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.3.1",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "uuidv7": "^0.3.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.5.0",
    "@vitest/coverage-v8": "^1.5.0",
    "supertest": "^6.3.4",
    "@types/supertest": "^2.0.16"
  }
}
